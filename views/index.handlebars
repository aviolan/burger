<center>
    <img src="../public/assets/img/burger.jpg"><br>
    Eat-Da-Burger!
</center>
<br>
<br>
<div class ="col-md-4">
    <center>
        Add Burger's Name!
    </center>

    <form class="col-md-12" action="/burger/add" method="POST">
        <div class="col-md-11 col-md-offset-1 text-center" style="margin-top:15px">
            <label for="burger" style="color: red; font-family: 'Comic Sans MS', cursive, sans-serif">Order Your Burger!</label>
            <input type="text" id="burger" name="user_burger" required>
        </div>
    </form>
</div>

<div class="col-md-4">
  
  <center>
  Your Burger's Name
  </center>

  <div class="col-md-12 text-center">
      {{#each burger}}
        {{#unless this.devoured}}
          <form class="col-md-12" action="/burger/update/{{this.id}}?_method=PUT" method="POST">
          <div class="burger_name" style="font-size: 14pt; padding: 10px; color: red; font-family: 'Comic Sans MS', cursive, sans-serif" id="burger1">{{this.burger_name}}
          </div>
          <button class="btn btn-warning btn-xs" type="submit"></button>
          </form>
        {{/unless}}
      {{/each}}
  </div>
</div>

<div class="col-md-4">
  <center>
  You Devoured!
  </center>
  <div class="col-md-12 text-center">
    {{#each burger}}
      {{#if this.devoured}}
          <form class="col-md-12" action="/burger/delete/{{this.id}}?_method=PUT" method="POST">
          <div class="burger_name" style="font-size: 14pt; padding: 10px; color:red; font-family: 'Comic Sans MS', cursive, sans-serif">{{this.burger_name}}
          </div>
            <button class="btn btn-warning btn-xs" type="submit"></button>
          </form>
      {{/if}}
    {{/each}}
  </div>
</div>